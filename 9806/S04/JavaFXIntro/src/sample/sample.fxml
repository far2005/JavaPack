<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
   <children>
      <TextField fx:id="txt_name" />
      <Button mnemonicParsing="false" onAction="#clickMe" prefHeight="25.0" prefWidth="146.0" text="Button" GridPane.rowIndex="4" />
      <Label fx:id="lbl_view" text="Label" GridPane.rowIndex="5" />
      <TextField fx:id="txt_family" GridPane.rowIndex="1" />
      <RadioButton fx:id="rb_male" mnemonicParsing="false" selected="true" text="Male" GridPane.rowIndex="2">
         <toggleGroup>
            <ToggleGroup fx:id="gender" />
         </toggleGroup></RadioButton>
      <RadioButton mnemonicParsing="false" text="Female" toggleGroup="$gender" GridPane.rowIndex="3" />
   </children>
</GridPane>
